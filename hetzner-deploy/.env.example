# TradeMatrix Hetzner Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to Git!

# =============================================================================
# SUPABASE (Required)
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-service-role-key

# =============================================================================
# REDIS (Required)
# =============================================================================
# Default for Docker Compose setup
REDIS_URL=redis://redis:6379/0

# =============================================================================
# CHART GENERATION (Required)
# =============================================================================
# chart-img.com API - For TradingView chart generation
# Plan: MEGA Plan ($10/month, 1,000 requests/day)
# Get key from: https://chart-img.com/account
CHART_IMG_API_KEY=3pJTrvapkk9LQ7FwaUOmf6I354fSOeWa8VJifI2l
CHART_IMG_BASE_URL=https://api.chart-img.com

# Rate Limits & Caching
CHART_API_DAILY_LIMIT=1000
CHART_CACHE_TTL=3600

# =============================================================================
# AI SERVICES (Required for ChartWatcher)
# =============================================================================
# OpenAI - For Vision API (chart analysis)
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key

# =============================================================================
# MARKET DATA PROVIDERS (Required)
# =============================================================================
# Finnhub - Real-time price data
# Get key from: https://finnhub.io/dashboard
FINNHUB_API_KEY=your-finnhub-api-key

# Alpha Vantage - Backup price data
# Get key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# =============================================================================
# WEB PUSH NOTIFICATIONS (Required for Alerts)
# =============================================================================
# VAPID Keys - For browser push notifications
# Generate with: python services/agents/generate_vapid_keys.py
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================
# Python Environment
PYTHONUNBUFFERED=1

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Timezone (for scheduled tasks)
TZ=Europe/Berlin

